{
  "name": "napari-theme",
  "version": "1.0.0",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "yarn build:theme-prod && yarn build:docs",
    "build:docs": "jupyter-book build .",
    "build:theme": "webpack build",
    "build:theme-prod": "NODE_ENV=production yarn build:theme",
    "clean": "run-p clean:*",
    "clean:api-stable": "find api/stable/ ! -name 'index.rst' -type f -exec rm -f {} +",
    "clean:docs": "rm -rf _build/html",
    "clean:theme": "rm -rf theme/napari/static/dist",
    "lint": "run-p lint:*",
    "lint:scss": "stylelint theme/scss",
    "lint:js": "eslint theme/js",
    "dev": "yarn build:theme && mkdir -p _build/html && run-p dev:*",
    "dev:server": "node dev-server",
    "dev:theme": "webpack watch",
    "postinstall": "husky install",
    "prettier": "prettier --check theme",
    "prettier:fix": "prettier --write theme"
  },
  "dependencies": {
    "modern-normalize": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "chokidar": "^3.5.1",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.0-rc.2",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.1",
    "fibers": "^5.0.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.6.0",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.2.8",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "reload": "^3.1.1",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  }
}
