{
  "name": "napari-theme",
  "version": "1.0.0",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "yarn build:theme-prod && yarn build:docs",
    "build:docs": "jupyter-book build .",
    "build:theme": "webpack build",
    "build:theme-prod": "NODE_ENV=production yarn build:theme",
    "clean": "run-p clean:*",
    "clean:api-stable": "find api/stable/ ! -name 'index.rst' -type f -exec rm -f {} +",
    "clean:docs": "rm -rf _build/html",
    "clean:theme": "rm -rf theme/napari/static/dist",
    "lint": "run-p lint:*",
    "lint:scss": "stylelint theme/scss",
    "lint:js": "eslint theme/js",
    "dev": "yarn build:theme && mkdir -p _build/html && run-p dev:*",
    "dev:server": "node dev-server",
    "dev:theme": "webpack watch",
    "postinstall": "husky install",
    "prettier": "prettier --check theme",
    "prettier:fix": "prettier --write theme"
  },
  "dependencies": {
    "@types/lodash-es": "4.17.4",
    "clsx": "1.1.1",
    "lodash": "4.17.21",
    "lodash-es": "4.17.21",
    "modern-normalize": "1.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "slug": "5.1.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.4.1",
    "@types/express": "4.17.13",
    "@types/morgan": "1.9.3",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@types/slug": "5.0.2",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "autoprefixer": "10.3.3",
    "cheerio": "1.0.0-rc.10",
    "chokidar": "3.5.2",
    "cssnano": "5.0.8",
    "eslint": "7.23.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.4",
    "eslint-plugin-jest-playwright": "0.2.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "express": "4.17.1",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "morgan": "1.10.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.3.6",
    "postcss-import": "14.0.2",
    "prettier": "2.3.2",
    "reload": "3.2.0",
    "sass": "1.38.2",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0",
    "stylelint-prettier": "1.2.0",
    "stylelint-scss": "3.20.1",
    "tailwindcss": "2.2.9",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.11.0",
    "typed-scss-modules": "4.1.1",
    "typescript": "4.4.2",
    "vite": "2.5.2",
    "yaml": "1.10.2"
  }
}
